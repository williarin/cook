{
    "name": "williarin/cook",
    "description": "Composer plugin to execute recipes embedded in packages",
    "license": "MIT",
    "type": "composer-plugin",
    "require": {
        "php": ">=8.1",
        "ext-json": "*",
        "composer-plugin-api": "^2.3",
        "colinodell/indentation": "^1.0",
        "symfony/config": "^6.4 || ^7.0",
        "symfony/dependency-injection": "^6.4 || ^7.0",
        "symfony/filesystem": "^6.4 || ^7.0",
        "symfony/finder": "^6.4 || ^7.0",
        "symfony/options-resolver": "^6.4 || ^7.0",
        "symfony/validator": "^6.4 || ^7.0",
        "symfony/var-exporter": "^6.4 || ^7.0",
        "symfony/yaml": "^6.4 || ^7.0"
    },
    "require-dev": {
        "composer/composer": "^2.3",
        "ergebnis/composer-normalize": "^2.29",
        "kubawerlos/php-cs-fixer-custom-fixers": "^3.11",
        "mockery/mockery": "^1.5",
        "nikic/php-parser": "^4.15 || ^5.0",
        "php-parallel-lint/php-parallel-lint": "^1.3",
        "phpro/grumphp": "^1.13 || ^2.4",
        "phpunit/phpunit": "^10.0 || ^11.0 || ^12.0",
        "symfony/var-dumper": "^6.4 || ^7.0",
        "symplify/coding-standard": "^12.0",
        "symplify/easy-coding-standard": "^12.0"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Williarin\\Cook\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Williarin\\Cook\\Test\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "ergebnis/composer-normalize": true,
            "phpro/grumphp": true
        }
    },
    "extra": {
        "class": "Williarin\\Cook\\Cook"
    }
}
